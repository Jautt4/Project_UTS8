<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <!-- Header Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAFTAR NILAI"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matakuliah: Mobile Programming"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UNIVERSITAS BUDI LUHUR - 2024/2025"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"/>

    <!-- Image Logo Universitas -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/budiluhur"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Input Fields -->
    <EditText
        android:id="@+id/etNim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NIM"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:inputType="text"/>

    <EditText
        android:id="@+id/etPresensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Presensi"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tugas"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etUts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UTS"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etUas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UAS"
        android:inputType="number"/>

    <!-- Semester Radio Group (Gasal/Genap) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester:"
        android:layout_marginTop="16dp"
        android:textSize="16sp"/>

    <RadioGroup
        android:id="@+id/rgSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gasal"
            android:id="@+id/radioGasal"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genap"
            android:id="@+id/radioGenap"/>
    </RadioGroup>

    <!-- Button untuk menghitung nilai akhir -->
    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Nilai Akhir"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- TextView untuk menampilkan hasil -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="16sp"/>
</LinearLayout>

